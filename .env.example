# Application Environment (dev, production)
APP_ENVIRONMENT=dev

# Application Settings
APP_APPLICATION__HOST=127.0.0.1
APP_APPLICATION__PORT=8000

# Database Connection
DATABASE_URL=postgres://postgres:password@localhost:5432/robswebhub?sslmode=disable

# PostgreSQL settings (used by docker-compose for the postgres container)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password
POSTGRES_DB=robswebhub

# Authentication (Auth0)
AUTH0_DOMAIN=...
AUTH0_CLIENT_ID=...
AUTH0_CLIENT_SECRET=...
AUTH0_CALLBACK_URL=...

# Session cookie keys
COOKIE_ENCRYPTION_KEY=...
COOKIE_AUTH_KEY=...

# Telemetry (optional)
# TELEMETRY_SENTRY_DSN=...
